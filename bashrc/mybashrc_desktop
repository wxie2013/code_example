    eval "$__conda_setup"
else
    if [ -f "/home/wxie/local_pkgs/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/wxie/local_pkgs/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/wxie/local_pkgs/anaconda3/bin:$PATH"
    fi
fi
