   unset PYTHONPATH
   export PYTHONPATH=/home/wxie:/home/wxie/Brian2/pkgs
   export PATH=$PATH:$HOME/local_pkgs/genn/bin
   export CUDA_PATH=/usr/local/cuda
   unset __conda_setup
   unset JUPYTER_CONFIG_DIR 
   conda activate brian2
}

